{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ES2015",
      "moduleResolution": "Node",      
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist/esm",

      "declaration": true,
      "sourceMap": true,

      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
        },
    "include": [
      "./src"
    ]
  }
